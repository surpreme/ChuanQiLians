<resources>


    <!--控制头部据appbar的样式-->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <!--用于控制toolbar溢出菜单的样式-->
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- 设置Toolbar标题字体的颜色大小 -->
    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">56sp</item><!--toolbar标题字体大小-->
        <item name="android:textColor">#ffffff</item><!--toolbar标题字体颜色-->
    </style>
    <!--    设置tablayout字体大小-->
    <style name="TabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">19sp</item>
        <!--        <item name="android:textStyle">bold</item>-->
    </style>
    <!--    设置tablayout背景-->

    <!-- <style name="Base.Widget.Design.TabLayout" parent="android:Widget">
         <item name="tabBackground">@drawable/tab_select_background</item>
 &lt;!&ndash;        <item name="tabIndicatorColor">#ff00ff</item>&ndash;&gt;
 &lt;!&ndash;        <item name="tabIndicatorHeight">2dp</item>&ndash;&gt;
     </style>-->
    <!-- 自定义对话框风格 -->
    <style name="commonTipDialogStyle" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFrame">@null</item>
        <!--无边框 -->
        <item name="android:windowNoTitle">true</item>
        <!--没有标题-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--背景是否半透明-->
        <item name="android:windowContentOverlay">@null</item>
        <!--对话框是否有遮盖 -->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--动画样式-->
        <item name="android:backgroundDimEnabled">false</item>
        <!--背景是否模糊-->

    </style>

    <style name="TransparentDialogStyle" parent="commonTipDialogStyle">

        <!-- 是否浮在activity之上 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 设置自定义布局的背景半透明 -->
        <item name="android:background">#50000000</item>

        <!--<item name="android:windowBackground">@android:color/transparent</item>-->
    </style>

    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="update_progress_red_horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <!--进度条的进度颜色drawable文件-->
        <item name="android:progressDrawable">@drawable/progress_indeterminate_horizontal</item>
        <!--进度条的最小高度-->
        <item name="android:minHeight">17dp</item>
        <!--进度条的最大高度-->
        <item name="android:maxHeight">17dp</item>
    </style>

    <style name="update_progress_green_horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <!--进度条的进度颜色drawable文件-->
        <item name="android:progressDrawable">@drawable/progress_indeterminate_horizontal</item>
        <!--进度条的最小高度-->
        <item name="android:minHeight">17dp</item>
        <!--进度条的最大高度-->
        <item name="android:maxHeight">17dp</item>
    </style>
 <style name="update_progress_uncircle_horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <!--进度条的进度颜色drawable文件-->
        <item name="android:progressDrawable">@drawable/progress_indeterminate_uncircle_horizontal</item>
        <!--进度条的最小高度-->
        <item name="android:minHeight">17dp</item>
        <!--进度条的最大高度-->
        <item name="android:maxHeight">17dp</item>
    </style>
    <declare-styleable name="FlowView">
        <attr name="maxLine" format="integer" />
        <attr name="noRightMargin" format="boolean" />
    </declare-styleable>
</resources>
