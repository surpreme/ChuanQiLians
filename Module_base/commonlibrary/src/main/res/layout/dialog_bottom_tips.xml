<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="20.5dp">


    <TextView
        android:id="@+id/bottom_information_tips_tv"
        android:layout_width="match_parent"
        android:layout_height="47.5dp"
        android:alpha="0.94"
        android:gravity="center"
        android:text="相册"
        android:background="@drawable/ios_theme_background_rectangle"
        android:textColor="#ff3478f6"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.cardview.widget.CardView
        android:id="@+id/cancel_cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/bottom_information_tips_tv">

        <TextView
            android:id="@+id/cancel_tv"
            android:layout_width="match_parent"
            android:layout_height="47.5dp"
            android:alpha="0.94"
            android:background="@drawable/ios_theme_background_rectangle2"
            android:gravity="center"
            android:text="取消"
            android:textColor="#ff3478f6"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/line1" />

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>