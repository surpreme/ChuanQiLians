<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mbcq.accountlibrary.activity.setting.SettingActivity">

    <com.mbcq.baselibrary.view.CnToolbar
        android:id="@+id/setting_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/base_blue"
        app:backButtonIsShow="true"
        app:centerTextViewText="设置"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/toolbar_line"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:alpha="0.7"
        android:background="@color/base_gray"
        app:layout_constraintTop_toBottomOf="@id/setting_activity_toolbar" />


    <LinearLayout
        android:id="@+id/setting_activity_ll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_line">

        <LinearLayout
            android:id="@+id/about_us_information_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="  关于我们"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:rotation="180"
                android:src="@drawable/ic_back_icon"
                app:tint="@color/black" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:alpha="0.5"

            android:background="@color/base_grayDark" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="  版本更新"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/app_version_information_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="当前版本号1.0.0" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:rotation="180"
                android:src="@drawable/ic_back_icon"
                app:tint="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:alpha="0.5"
            android:background="@color/base_grayDark" />

        <LinearLayout
            android:id="@+id/app_cache_information_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="  清除缓存"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/app_cache_information_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="0.00M" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:rotation="180"
                android:src="@drawable/ic_back_icon"
                app:tint="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:alpha="0.5"
            android:background="@color/base_grayDark" />

        <LinearLayout
            android:id="@+id/down_app_ar_code_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="  二维码下载APP"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="点击显示二维码" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:rotation="180"
                android:src="@drawable/ic_back_icon"
                app:tint="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:alpha="0.5"
            android:background="@color/base_grayDark" />

        <LinearLayout
            android:id="@+id/face_recognition_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="  注册人脸识别"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/face_recognition_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="未添加" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:rotation="180"
                android:src="@drawable/ic_back_icon"
                app:tint="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:alpha="0.5"
            android:background="@color/base_grayDark" />

        <LinearLayout
            android:id="@+id/finger_recognition_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:gravity="center|left"
                android:paddingLeft="15dp"
                android:text="  指纹登录"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/finger_recognition_state_tv"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="未打开" />

            <ImageView
                android:layout_width="10dp"
                android:layout_height="23dp"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:rotation="180"
                android:src="@drawable/ic_back_icon"
                app:tint="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="15dp"
            android:alpha="0.5"
            android:background="@color/base_grayDark" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>