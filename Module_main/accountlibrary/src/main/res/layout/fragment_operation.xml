<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.mbcq.baselibrary.view.CnToolbar
        android:id="@+id/operation_toolbar"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:background="@drawable/toolbar_background_blue"
        android:layout_height="70dp"
        app:backButtonIsShow="false"
        app:centerTextViewText="传麒链" />


    <com.mbcq.baselibrary.view.OverScrollLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/operation_toolbar">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/operation_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />
    </com.mbcq.baselibrary.view.OverScrollLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




