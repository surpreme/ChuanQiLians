<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tool_text_tv"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:background="@drawable/toolbar_background_blue"
        android:gravity="center"
        android:text="传麒链"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent" />

    <com.mbcq.baselibrary.view.OverScrollLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tool_text_tv">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/operation_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never" />
    </com.mbcq.baselibrary.view.OverScrollLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




