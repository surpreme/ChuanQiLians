<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.arrivaltrunkdeparture.ArrivalTrunkDepartureFragment">

    <EditText
        android:id="@+id/search_arrival_short_ed"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/hollow_out_gray"
        android:hint="请输入关键字搜索"
        android:paddingLeft="10dp"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/type_gr"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center|left"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_arrival_short_ed">

        <RadioButton
            android:id="@+id/roading_rb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:buttonTint="@color/base_blue"
            android:text="路途中"
            android:checked="true"
            android:textColor="@color/base_blue" />

        <RadioButton
            android:id="@+id/roaded_rb"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:buttonTint="@color/base_blue"
            android:text="已到车"
            android:textColor="@color/base_blue" />
    </RadioGroup>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/arrival_short_list_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_ll"
        app:layout_constraintTop_toBottomOf="@+id/type_gr" />


    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"
        android:paddingTop="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dp">

            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@color/white"
                android:text="取消到车"
                android:textColor="@color/black" />
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="9dp"
            android:layout_weight="1"
            app:cardCornerRadius="4dp">

            <Button
                android:id="@+id/unloading_warehousing_btn"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:alpha="0.9"
                android:background="@color/base_blue"
                android:text="卸车入库"
                android:textColor="@color/white" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>