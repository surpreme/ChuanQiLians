<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/scan_info_father_cl"
    android:padding="5dp">

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="100560441230003" />

    <TextView
        android:id="@+id/scan_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="2020-12-11  11:12:03"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scan_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        tools:text="王大脚"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text" />

    <TextView
        android:id="@+id/dismantle_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/base_red"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/scan_name_tv"
        app:layout_constraintRight_toLeftOf="@+id/scan_inOneVehicleFlag_info_tv"
        app:layout_constraintTop_toTopOf="@+id/scan_inOneVehicleFlag_info_tv"
        app:layout_constraintBottom_toBottomOf="@+id/scan_inOneVehicleFlag_info_tv"
        tools:text='拆' />

    <TextView
        android:id="@+id/scan_inOneVehicleFlag_info_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:textColor="@color/base_red"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/scan_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scan_name_tv"
        tools:text='DB1003-20201211-003' />


</androidx.constraintlayout.widget.ConstraintLayout>

