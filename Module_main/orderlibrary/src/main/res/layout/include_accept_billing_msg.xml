<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cargo_name_title_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="left|center"
                android:text="货物名称"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/cargo_name_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="left|center"
                android:minWidth="20dp"
                android:text="配件"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/cargo_name_title_tv"
                app:layout_constraintLeft_toRightOf="@+id/cargo_name_title_tv"
                app:layout_constraintTop_toTopOf="@+id/cargo_name_title_tv" />

            <ImageView
                android:id="@+id/cargo_name_down_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_down_icon" />

        </LinearLayout>

        <View
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numbers_title_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="left|center"
                android:text="件数"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/numbers_name_ed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="left|center"
                android:minWidth="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="25dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/hollow_out_gray"
                android:textColor="@color/black"
                android:textSize="16dp" />



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/package_title_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="left|center"
                android:text="包装"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/package_name_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="left|center"
                android:minWidth="20dp"
                android:text="纸箱"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/cargo_name_title_tv"
                app:layout_constraintLeft_toRightOf="@+id/cargo_name_title_tv"
                app:layout_constraintTop_toTopOf="@+id/cargo_name_title_tv" />

            <ImageView
                android:id="@+id/package_name_down_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:padding="5dp"
                android:src="@drawable/ic_down_icon" />

        </LinearLayout>

        <View
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/weight_title_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="left|center"
                android:text="重量"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/weight_name_ed"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="left|center"
                android:minWidth="20dp"
                android:text="配件"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/cargo_name_title_tv"
                app:layout_constraintLeft_toRightOf="@+id/cargo_name_title_tv"
                app:layout_constraintTop_toTopOf="@+id/cargo_name_title_tv" />

            <ImageView
                android:id="@+id/weight_name_calculation_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_calculator_icon" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/volume_title_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="left|center"
                android:text="体积"
                android:textColor="@color/black"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/volume_name_tv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:gravity="left|center"
                android:minWidth="20dp"
                android:text="0.00"
                android:textColor="@color/black"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/cargo_name_title_tv"
                app:layout_constraintLeft_toRightOf="@+id/cargo_name_title_tv"
                app:layout_constraintTop_toTopOf="@+id/cargo_name_title_tv" />

            <ImageView
                android:id="@+id/volume_name_calculation_iv"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_calculator_icon" />

        </LinearLayout>

        <View
            android:layout_width="30dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:orientation="horizontal" />


    </LinearLayout>


</LinearLayout>

