<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="10dp"
    tools:context="com.mbcq.orderlibrary.activity.acceptbilling.billingvolumecalculator.BillingVolumeCalculatorAdapter">

    <ImageView
        android:id="@+id/remove_iv"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:padding="7dp"
        android:src="@drawable/ic_remove_icon" />

    <TextView
        android:id="@+id/singleLong_tv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        tools:text="长(cm)" />

    <TextView
        android:id="@+id/singleWidth_tv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        tools:text="宽(cm)" />

    <TextView
        android:id="@+id/singleHigh_tv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        
        tools:text="高(cm)" />

    <TextView
        android:id="@+id/number_tv"

        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="17sp"
        
        tools:text="件数" />

    <TextView
        android:id="@+id/totalWeight_tv"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textSize="17sp"
        tools:text="体积(m³)" />

</LinearLayout>

